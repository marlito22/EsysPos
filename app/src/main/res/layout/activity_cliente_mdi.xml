<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sin_logo"
    tools:context=".Cliente.cliente_mdi">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/logo50x50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carrois_gothic"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="CREAR CLIENETE"
                android:textColor="@color/colorTexto"
                android:textSize="32dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.04000002">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtNitcli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:autofillHints=""
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Identificacion"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtPrimerNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Primer Nombre"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtSegundoNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Segundo Nombre"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtPrimerApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:ems="20"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Primer Apellido"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtSegundoApellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Segundo Apellido"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Direccion"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="E-Mail"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/txtTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/redondeo_imagenes"
                        android:backgroundTint="@color/colorTexto"
                        android:fontFamily="@font/carrois_gothic"
                        android:gravity="center"
                        android:hint="Tel/cel."
                        android:inputType="text|phone"
                        android:padding="5dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/black_overlay"
                        android:textSize="24sp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="184dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp">

                    <Spinner
                        android:id="@+id/spinner_terminal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:dropDownWidth="wrap_content"
                        android:padding="5dp"
                        android:spinnerMode="dialog" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/redondeo_imagenes"
            android:fontFamily="@font/carrois_gothic"
            android:text="Atras"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/redondeo_imagenes2"
            android:fontFamily="@font/carrois_gothic"
            android:text="Guardar"
            android:textColor="@color/colorTexto"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>